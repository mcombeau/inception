USE mysql;
 FLUSH PRIVILEGES;
 DELETE FROM mysql.user WHERE User='';
 DROP DATABASE IF EXISTS test;
 DELETE FROM mysql.db WHERE Db='test';
 DELETE FROM mysql.user WHERE User='root' AND Host NOT IN ('localhost', '127.0.0.1', '::1');
 ALTER USER 'root'@'localhost' IDENTIFIED BY 'MostSecurePasswordEver666';
 CREATE DATABASE wordpress_db CHARACTER SET utf8 COLLATE utf8_general_ci;
 CREATE USER 'wordpress_user'@'%' IDENTIFIED BY 'SecurePassword100Percent';
 GRANT ALL PRIVILEGES ON wordpress_db.* TO 'wordpress_user'@'%' IDENTIFIED BY 'SecurePassword100Percent';
 FLUSH PRIVILEGES;
